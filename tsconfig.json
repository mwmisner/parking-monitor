{
  "compilerOptions": {
    "target": "es2017", // or higher
    "module": "esnext", // or 'es2022', 'node16', 'nodenext'
    "lib": ["esnext", "dom"], // Include 'dom' here
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "infrastructure"
  ]
}